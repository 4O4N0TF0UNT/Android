<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            style="@style/main_item_ll">
            <RelativeLayout
                style="@style/main_item_rl">
                <ImageView
                    android:id="@+id/xys_iv_left_img"
                    style="@style/main_item_img"
                    android:src="@drawable/chapter_1_icon"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/xys_tv_left_title"
                style="@style/main_item_title"
                android:text="科目一"/>
        </LinearLayout>
        <LinearLayout
            style="@style/main_item_ll">
            <RelativeLayout
                style="@style/main_item_rl">
                <ImageView
                    android:id="@+id/xys_iv_right_img"
                    style="@style/main_item_img"
                    android:src="@drawable/chapter_2_icon"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/xys_tv_right_title"
                style="@style/main_item_title"
                android:text="科目四"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            style="@style/main_item_ll">
            <RelativeLayout
                style="@style/main_item_rl">
                <ImageView
                    android:id="@+id/xys_iv_left_imgs"
                    style="@style/main_item_img"
                    android:src="@drawable/chapter_3_icon"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/xys_tv_left_titles"
                style="@style/main_item_title"
                android:text="关于我们"/>
        </LinearLayout>
        <LinearLayout
            style="@style/main_item_ll">
            <RelativeLayout
                style="@style/main_item_rl">
                <ImageView
                    android:id="@+id/xys_iv_right_imgs"
                    style="@style/main_item_img"
                    android:src="@drawable/chapter_4_icon"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/xys_tv_right_titles"
                style="@style/main_item_title"
                android:text="视频"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
